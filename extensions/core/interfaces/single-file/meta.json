    "INT": null
  },
  "options": {
    "viewType": {
      "name": "$t:view_type",
      "comment": "$t:view_type_comment",
      "default": "tile",
      "interface": "text-input"
    },
    "viewOptions": {
      "name": "$t:view_options",
      "comment": "$t:view_options_comment",
      "interface": "code",
