{
  "name": "directus/directus",
  "description": "Directus",
  "license": "GPLv3",
  "keywords": [
    "directus",
    "laravel"
  ],
  "authors": [{
    "name": "WoLfulus",
    "email": "wolfulus@gmail.com"
  }],
  "require": {
    "php": ">=7.2",
    "doctrine/dbal": "^2.10",
    "illuminate/console": "^6",
    "illuminate/database": "^6",
    "illuminate/http": "^6",
    "illuminate/routing": "^6",
    "illuminate/support": "^6"
  },
  "require-dev": {
    "cedx/coveralls": "^11.2",
    "friendsofphp/php-cs-fixer": "^2.16",
    "nunomaduro/larastan": "^0.5.1",
    "orchestra/testbench": "^4.6",
    "phpstan/extension-installer": "^1.0",
    "phpstan/phpstan": "^0.12",
    "phpstan/phpstan-phpunit": "^0.12",
    "phpstan/phpstan-strict-rules": "^0.12",
    "phpunit/phpunit": "^8"
  },
  "autoload": {
    "psr-4": {
      "Directus\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Directus\\Tests\\": "tests/src/",
      "Directus\\Tests\\Helpers\\": "tests/helpers/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "format": "php-cs-fixer --ansi fix",
    "lint:cs-fixer": "php-cs-fixer --ansi fix --diff --dry-run",
    "lint:phpstan": "phpstan --ansi --memory-limit=2G --configuration=.phpstan.neon analyse",
    "lint": [
      "@lint:cs-fixer",
      "@lint:phpstan"
    ],
    "test": "phpunit --colors=always --configuration=.phpunit.xml",
    "test:with-coverage": "phpunit --colors=always --configuration=.phpunit.xml --log-junit=build/phpunit.xml --coverage-html=build/html --coverage-clover=build/coverage.xml",
    "coverage:report": "coveralls build/coverage.xml",
    "ci": [
      "@lint",
      "@test:with-coverage"
    ]
  },
  "config": {
    "sort-packages": true,
    "preferred-install": "dist",
    "optimize-autoloader": true
  },
  "extra": {
    "laravel": {
      "providers": [
        "Directus\\Laravel\\ServiceProvider"
      ]
    }
  }
}
